<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :name, class: 'devise-labels' %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'devise-labels' %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'devise-labels' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'devise-labels'  %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'devise-button' %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
