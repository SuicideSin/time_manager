<%= render "layouts/errors", :object => @day %>

<%= form_for @day do |f| %>
  <%= f.label :date %>
  <div id="drop_down">
    <%= f.select :activity, [['Please Select a Day','Unspecified'],['Sunday','sunday'],['Monday','monday'],['Tuesday','tuesday'],['Wednesday','wednesday'],['Thursday','thursday'],['Friday','friday'],['Saturday','saturday']], id: 'drop_down', selected: 1 %>
  </div>
  <%= f.label :datefield %>
  <%= f.date_field :datefield, class: "field" %>

  <%= f.submit class: "btn btn-default field" %>
<% end %>
<%= link_to "Back", days_path(@day), class: "btn btn-default field" %>
