
<% if current_user %>
  <h2>Your Dashboard</h2>
  <ul>
    <% current_user.days.all.each do |day| %>
      <li class="list"><h4><div class="list_item">
        <p><%= link_to day.date, day_activities_path(day) %>
         Date: <%= day.datefield %></p>
      </div></h4></li>
    <% end %>
  </ul>

<% else %>

<h2>Please log in or sign up to continue.</h2>

<% end %>
