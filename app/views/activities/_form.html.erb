<%= render('layouts/errors', :object => @activity) %>


  <% if @day.activities.length < 24 %>
    <h5>There are <%= @day.activities.length %> activities currently logged.</h5>
    <%= form_for [@activity] do |f| %>
      <%= f.label :activity %>




      <%= f.text_field :activity %>


      <p><%= f.submit 'Update Activity Name', class: "btn btn-default field", :data => { :method => 'patch'} %></p>
    <% end %>
  <% end %>


  <%= form_for [ @activity, @tag ], remote: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field  :name %>
    <p><%= f.submit class: "btn btn-default field" %></p>
  <% end %>


  <%= form_for [@activity, @tag ], remote: true do |f| %>
    <%= f.label :name %>
    <% tags = options_from_collection_for_select(@tags,'name', 'name') %>
    <%= f.select :name, tags, id: "drop_down", :prompt => '-Select a Tag to Add-' %>
    <p><%= f.submit 'Select a tag', class: "btn btn-default field" %></p>
  <% end %>

  <%= link_to "Back", days_path(@day), class: "btn btn-default field" %>
