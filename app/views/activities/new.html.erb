<h1>Tag this activity for <%= @day.date %>.</h1>


<div class="row">
  <div class="col-lg-6">

    <%= render 'form' %>

    <%= render('tags/form') %>


    <%= form_for [ @activity, @tag ], remote: true do |f| %>


      <%= f.label :name %>
      <%= f.text_field  :name %>
      <p><%= f.submit class: "btn btn-default field" %></p>

    <% end %>


  </div>
</div>
