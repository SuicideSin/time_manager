<!DOCTYPE html>
<html>
  <head>
    <title>TimeManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <h2 class="page-header">Time Helper</h2>
      <div class="flashes">
        <%= flash[:success] %>
        <%= flash[:failure] %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
